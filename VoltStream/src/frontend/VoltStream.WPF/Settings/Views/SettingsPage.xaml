<Page x:Class="VoltStream.WPF.Settings.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:VoltStream.WPF.Settings.ViewModels"
      xmlns:conv="clr-namespace:VoltStream.WPF.Commons.Converters"
      Title="Sozlamalar">

    <Grid>
        <TabControl>
            <!-- 🟢 Aloqa Sozlamalari -->
            <TabItem Header="Aloqa">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Status -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,20">
                        <TextBlock Text="{Binding ApiConnection.Url}"
                                   Foreground="{Binding ApiConnection.StatusColor}"
                                   FontWeight="Bold"
                                   FontSize="16" />
                    </StackPanel>

                    <!-- Form -->
                    <StackPanel Grid.Row="1"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Center"
                                Width="320"
                                Margin="0,0,0,20"
                                Orientation="Vertical">

                        <!-- URL konfiguratsiyasi -->
                        <GroupBox Header="Server manzili"
                                  Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <CheckBox Content="HTTPS ishlatilsin"
                                          IsChecked="{Binding ApiConnection.IsHttps}"
                                          Margin="0,5" />

                                <Grid Margin="0,5">
                                    <TextBox x:Name="HostTextBox"
                                             Text="{Binding ApiConnection.Host, UpdateSourceTrigger=PropertyChanged}"
                                             Background="Transparent"
                                             BorderBrush="Gray"
                                             Padding="5" />
                                    <TextBlock Text="Host (masalan: localhost)"
                                               Foreground="Gray"
                                               Margin="5,0,0,0"
                                               IsHitTestVisible="False"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding Text, ElementName=HostTextBox, Converter={StaticResource EmptyToVisibleConverter}}" />
                                </Grid>

                                <Grid Margin="0,5">
                                    <TextBox x:Name="PortTextBox"
                                             Text="{Binding ApiConnection.Port, UpdateSourceTrigger=PropertyChanged}"
                                             Background="Transparent"
                                             BorderBrush="Gray"
                                             Padding="5" />
                                    <TextBlock Text="Port (masalan: 5000)"
                                               Foreground="Gray"
                                               Margin="5,0,0,0"
                                               IsHitTestVisible="False"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding Text, ElementName=PortTextBox, Converter={StaticResource EmptyToVisibleConverter}}" />
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <!-- Real-time sozlamalar -->
                        <GroupBox Header="Ulanish xatti-harakatlari"
                                  Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <CheckBox Content="Avto-ulanish yoqilgan"
                                          IsChecked="{Binding ApiConnection.AutoReconnectEnabled}"
                                          Margin="0,5" />
                                <CheckBox Content="URLni tekshirish"
                                          IsChecked="{Binding ApiConnection.CheckUrlEnabled}"
                                          Margin="0,5" />
                                <CheckBox Content="Indikator ko‘rsatiladi"
                                          IsChecked="{Binding ApiConnection.ShowIndicator}"
                                          Margin="0,5"
                                          Visibility="{Binding ApiConnection.CheckUrlEnabled, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>

                    <!-- Save Button -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                        <Button Content="Manzilni saqlash"
                                ToolTip="Host, port va HTTPS asosida URLni yaratadi"
                                Command="{Binding ApiConnection.SaveConnectionSettingsCommand}"
                                Width="140"
                                Height="35"
                                Background="#007ACC"
                                Foreground="White"
                                FontWeight="SemiBold" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- 💱 Valyuta Sozlamalari -->
            <TabItem Header="Valyutalar">
                <Border BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,5">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Border BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="10"
                                Margin="0,5"
                                Background="White"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Odatiy valyuta"
                                           VerticalAlignment="Center" />

                                <!-- Nomi -->
                                <TextBlock Text="Nomi:"
                                           Grid.Column="1"
                                           VerticalAlignment="Center" />

                                <!-- Kodi -->
                                <TextBlock Text="Kodi:"
                                           Grid.Column="2"
                                           VerticalAlignment="Center" />

                                <!-- Belgisi -->
                                <TextBlock Text="Belgisi:"
                                           Grid.Column="3"
                                           VerticalAlignment="Center" />

                                <!-- Kurs -->
                                <TextBlock Text="Kurs:"
                                           Grid.Column="4"
                                           VerticalAlignment="Center" />

                                <!-- Amal -->
                                <TextBlock Text="Amallar"
                                           Grid.Column="5"
                                           VerticalAlignment="Center" />
                            </Grid>
                        </Border>

                        <!-- Valyuta ro‘yxati -->
                        <ItemsControl Grid.Row="1"
                                      ItemsSource="{Binding Currencies}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="LightGray"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="10"
                                            Margin="0,5"
                                            Background="White"
                                            SnapsToDevicePixels="True">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <RadioButton GroupName="DefaultCurrency"
                                                         IsChecked="{Binding IsDefault}"
                                                         ToolTip="Default valyuta"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,10,0" />
                                            <!-- Nomi -->
                                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                     BorderThickness="0"
                                                     Grid.Column="1" />

                                            <!-- Kodi -->
                                            <TextBox Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}"
                                                     BorderThickness="0"
                                                     Grid.Column="2" />

                                            <!-- Belgisi -->
                                            <TextBox Text="{Binding Symbol, UpdateSourceTrigger=PropertyChanged}"
                                                     BorderThickness="0"
                                                     Grid.Column="3" />

                                            <!-- Kurs -->
                                            <TextBox Text="{Binding ExchangeRate, UpdateSourceTrigger=PropertyChanged}"
                                                     BorderThickness="0"
                                                     Grid.Column="4" />

                                            <!-- Amal -->
                                            <Button Content="O‘chirish"
                                                    Grid.Column="5"
                                                    BorderThickness="0"
                                                    Command="{Binding DataContext.RemoveCurrencyCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    Background="Tomato"
                                                    Foreground="White"
                                                    Width="80"
                                                    Padding="5,2"
                                                    ToolTip="Valyutani o‘chirish" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>


                        <!-- Qo‘shish va Saqlash -->
                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,10,0,0">
                            <Button Content="Valyuta qo‘shish"
                                    Command="{Binding AddCurrencyCommand}"
                                    Width="140"
                                    Height="35"
                                    Background="#007ACC"
                                    Foreground="White"
                                    FontWeight="SemiBold" />

                            <Button Content="Saqlash"
                                    Command="{Binding SaveCurrenciesCommand}"
                                    Width="140"
                                    Height="35"
                                    Background="ForestGreen"
                                    Foreground="White"
                                    FontWeight="SemiBold" />
                        </StackPanel>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Page>

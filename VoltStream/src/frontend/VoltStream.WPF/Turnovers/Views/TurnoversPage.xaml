<Page x:Class="VoltStream.WPF.Turnovers.Views.TurnoversPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:VoltStream.WPF.Commons.UserControls"
      xmlns:local="clr-namespace:VoltStream.WPF.Turnovers.Views"
      xmlns:utils="clr-namespace:VoltStream.WPF.Commons.Utils"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="900"
      Title="TurnoversPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  🔍 Filter panel  -->
        <Grid Grid.Row="0" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  👤 Mijoz  -->
            <Grid  Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="1"  Grid.Column="0"
                           Margin="5,0"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Text="Mijoz" />
                <!--Foreground="{DynamicResource PrimaryTextColor}"-->
                <ComboBox Grid.Row="1"  Grid.Column="1"
                          x:Name="cbxCustomer"
                          VerticalAlignment="Center"
                          Margin="0"
                          Padding="4,2"
                          BorderBrush="#ccc"
                          BorderThickness="1"
                          DisplayMemberPath="Name"
                          FontSize="14"
                          IsEditable="True"
                          ItemsSource="{Binding Customers}"
                          SelectedItem="{Binding SelectedCustomer}" />
                <!--  📅 Sana oralig‘i  -->
                <TextBlock Grid.Row="0"  Grid.Column="0"
                           Margin="05,0"
                           VerticalAlignment="Center"
                           FontSize="13"
                           Text="Xisobot davri" />
                <Grid Grid.Row="0"  Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <controls:UserCalendar Grid.Column="0"
                                           Width="110"
                                           Margin="0"
                                           VerticalAlignment="Center"
                                           utils:EnterKeyTab.IsEnabled="True"
                                           FontSize="14"
                                           SelectedDate="{Binding BeginDate, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Grid.Column="1"
                               Width="25"
                               Margin="2,0"
                               VerticalAlignment="Center"
                               FontSize="13"
                               Text="dan" />
                    <controls:UserCalendar Grid.Column="2"
                                           Width="110"
                                           Margin="0"
                                           VerticalAlignment="Center"
                                           utils:EnterKeyTab.IsEnabled="True"
                                           FontSize="14"
                                           SelectedDate="{Binding EndDate, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                    <TextBlock Grid.Column="3"
                               Width="35"
                               Margin="0"
                               VerticalAlignment="Center"
                               FontSize="13"
                               Text="gacha" />
                </Grid>

            </Grid>
            <!--  🔘 Tugmalar  -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button Grid.Row="0"
                        VerticalAlignment="Center"
                        Margin="5"
                        Padding="10,3"
                        Command="{Binding PreviewCommand}"
                        Content="📄 Ko‘rish"
                        FontSize="13"
                        ToolTip="Chop etishdan oldin ma'lumotlarni ko‘rish (Print Preview)" />
                <Button Grid.Row="1"
                        VerticalAlignment="Center"
                        Margin="5"
                        Padding="10,3"
                        Command="{Binding ClearFilterCommand}"
                        Content="🧹 Tozalash"
                        FontSize="13"
                        ToolTip="Filterni tozalash yoki barcha ma'lumotlarni qayta ko‘rsatish" />
            </Grid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button Grid.Row="0"
                        VerticalAlignment="Center"
                        Margin="5"
                        Padding="10,3"
                        Command="{Binding PrintCommand}"
                        Content="🖨 Pechat"
                        FontSize="13"
                        ToolTip="Chiqarish (Printerga yuborish)" />

                <Button Grid.Row="1"
                        VerticalAlignment="Center"
                        Margin="5"
                        Padding="10,3"
                        Command="{Binding ExportToExcelCommand}"
                        Content="📊 Excel"
                        FontSize="13"
                        ToolTip="Excel faylga eksport qilish" />

            </Grid>
            <Grid Grid.Column="3"
                  Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal"
                            Margin="5 0">
                    <TextBlock Text="Boshlang'ich qoldiq"
                               VerticalAlignment="Center"
                               FontSize="14"/>
                    <TextBlock x:Name="beginBalance"
                               FontSize="14"
                               Width="200"
                               Height="25"
                               Margin="10 0 0 0"
                               FontWeight="Medium"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Text="{Binding BeginBalance, StringFormat={}{0:N2}}"
                               />
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Oxirgi qoldiq"
                               VerticalAlignment="Center"
                               FontSize="14"
                               HorizontalAlignment="Left"
                               Width="120"/>
                    <TextBlock x:Name="lastBalance"
                               FontSize="14"
                               Width="200"
                               Height="25"
                               Margin="10 0 0 0"
                               FontWeight="Medium"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Text="{Binding LastBalance, StringFormat={}{0:N2}}"/>
                </StackPanel>
            </Grid>

        </Grid>
        <!--  📋 DataGrid  -->
        <DataGrid x:Name="MyDataGrid"
                  Grid.Row="1"
                  Margin="10,5,10,0"
                  AlternatingRowBackground="#F5F5F5"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  FontSize="14"
                  HeadersVisibility="Column"
                  IsReadOnly="True"
                  ItemsSource="{Binding CustomerOperationsForDisplay, Mode=TwoWay}"
                  RowHeaderWidth="0"
                  SelectionMode="Single">

            <DataGrid.Columns>
                <!--  🕓 Sana  -->
                <DataGridTextColumn
                    Width="0.7*"
                    Binding="{Binding Date, StringFormat={}{0:dd.MM.yyyy}}"
                    Header="Sana">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <!--  👤 Mijoz -->
                <DataGridTextColumn
                    Width="1.5*"
                    Binding="{Binding Customer}"
                    Header="Mijoz">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <!--  💰 Debit -->
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Debit, StringFormat={}{0:N0}}"
                    Header="Debit">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <!--  💳 Kredit -->
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Credit, StringFormat={}{0:N0}}"
                    Header="Kredit">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <!--  📝 Izoh (long text wrap + ; bo'yicha split) -->
                <DataGridTextColumn
                    Width="3*"
                    Binding="{Binding FormattedDescription}"
                    Header="Izoh">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left" />
                            <Setter Property="Padding" Value="5,0" />
                            <Setter Property="TextWrapping" Value="Wrap" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

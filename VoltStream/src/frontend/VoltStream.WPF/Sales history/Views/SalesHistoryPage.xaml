<Page
    x:Class="VoltStream.WPF.Sales_history.Views.SalesHistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:VoltStream.WPF.Commons.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VoltStream.WPF.Sales_history.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utils="clr-namespace:VoltStream.WPF.Commons.Utils"
    Title="Sotuv tarixi"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  🔍 Filter panel  -->
        <Grid Grid.Row="0" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  🧾 Filtr bo‘limi  -->
            <StackPanel Grid.Column="0" Margin="2,10">

                <!--  👤 Mijoz  -->
                <StackPanel Margin="5" Orientation="Horizontal">
                    <TextBlock
                        Width="100"
                        Margin="3,0,0,3"
                        VerticalAlignment="Center"
                        FontSize="13"
                        Foreground="{DynamicResource PrimaryTextColor}"
                        Text="Mijoz" />
                    <ComboBox
                        x:Name="cbxCustomer"
                        Width="210"
                        Margin="0,2"
                        Padding="4,2"
                        BorderBrush="#ccc"
                        BorderThickness="1"
                        DisplayMemberPath="Name"
                        FontSize="14"
                        IsEditable="True"
                        ItemsSource="{Binding Customers}"
                        SelectedItem="{Binding SelectedCustomer}" />
                </StackPanel>
                <StackPanel Margin="5,0" Orientation="Horizontal">
                    <!--  📅 Sana oralig‘i  -->
                    <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                        <TextBlock
                            Width="30"
                            Margin="3,0,0,3"
                            VerticalAlignment="Center"
                            FontSize="13"
                            Foreground="{DynamicResource PrimaryTextColor}"
                            Text="Davr" />
                        <controls:UserCalendar
                            x:Name="beginDate"
                            Width="110"
                            Margin="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            utils:EnterKeyTab.IsEnabled="True"
                            FontSize="14"
                            LostFocus="beginDate_LostFocus"
                            SelectedDate="{Binding BeginDate, Mode=TwoWay}" />

                    </StackPanel>

                    <StackPanel Margin="0" Orientation="Horizontal">
                        <TextBlock
                            Width="25"
                            Margin="0,0,0,3"
                            VerticalAlignment="Center"
                            FontSize="13"
                            Foreground="{DynamicResource PrimaryTextColor}"
                            Text="dan" />
                        <controls:UserCalendar
                            x:Name="endDate"
                            Width="110"
                            Margin="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            utils:EnterKeyTab.IsEnabled="True"
                            FontSize="14"
                            LostFocus="endDate_LostFocus"
                            SelectedDate="{Binding EndDate, Mode=TwoWay}" />
                        <TextBlock
                            Width="35"
                            Margin="0,0,0,3"
                            VerticalAlignment="Center"
                            FontSize="13"
                            Foreground="{DynamicResource PrimaryTextColor}"
                            Text="gacha" />

                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="2,15">
                <!--  🧩 Mahsulot turi  -->
                <StackPanel Margin="5,0" Orientation="Horizontal">
                    <TextBlock
                        Width="80"
                        Margin="3,0,0,3"
                        VerticalAlignment="Center"
                        FontSize="13"
                        Foreground="{DynamicResource PrimaryTextColor}"
                        Text="Mahsulot turi" />
                    <ComboBox
                        x:Name="cbxCategory"
                        Width="150"
                        Margin="0,2,0,4"
                        Padding="4,2"
                        BorderBrush="#ccc"
                        BorderThickness="1"
                        DisplayMemberPath="Name"
                        FontSize="14"
                        IsEditable="True"
                        ItemsSource="{Binding Categories}"
                        SelectedItem="{Binding SelectedCategory}" />
                </StackPanel>

                <!--  🏷 Mahsulot nomi  -->
                <StackPanel Margin="5,0" Orientation="Horizontal">
                    <TextBlock
                        MinWidth="80"
                        Margin="3,0,0,3"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="{DynamicResource PrimaryTextColor}"
                        Text="Nomi" />
                    <ComboBox
                        x:Name="cbxProductName"
                        Width="150"
                        Margin="0,2"
                        Padding="4,2"
                        BorderBrush="#ccc"
                        BorderThickness="1"
                        DisplayMemberPath="Name"
                        FontSize="14"
                        IsEditable="True"
                        ItemsSource="{Binding Products}"
                        SelectedItem="{Binding SelectedProduct}" />
                </StackPanel>
            </StackPanel>

            <!--  🔘 Tugmalar  -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                <Button
                    Margin="5"
                    Padding="10,3"
                    Command="{Binding PreviewCommand}"
                    Content="📄 Ko‘rish"
                    FontSize="13"
                    ToolTip="Chop etishdan oldin ma'lumotlarni ko‘rish (Print Preview)" />

                <Button
                    Margin="5,2,5,5"
                    Padding="10,3"
                    Command="{Binding ClearFilterCommand}"
                    Content="🧹 Tozalash"
                    FontSize="13"
                    Style="{DynamicResource ActionButton}"
                    ToolTip="Filterni tozalash yoki barcha ma'lumotlarni qayta ko‘rsatish" />
            </StackPanel>

            <StackPanel Grid.Column="3" VerticalAlignment="Center">
                <Button
                    Margin="5"
                    Padding="10,3"
                    Command="{Binding PrintCommand}"
                    Content="🖨 Pechat"
                    FontSize="13"
                    Style="{DynamicResource actionButton}"
                    ToolTip="Chiqarish (Printerga yuborish)" />

                <Button
                    Margin="5,2,5,5"
                    Padding="10,3"
                    Command="{Binding ExportToExcelCommand}"
                    Content="📊 Excel"
                    FontSize="13"
                    ToolTip="Excel faylga eksport qilish" />
            </StackPanel>
        </Grid>

        <!--  📋 DataGrid  -->
        <DataGrid
            Grid.Row="1"
            Margin="10,5,10,-5"
            AlternatingRowBackground="#F5F5F5"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            FontSize="14"
            HeadersVisibility="Column"
            IsReadOnly="True"
            ItemsSource="{Binding FilteredSaleItems, Mode=TwoWay}"
            RowHeaderWidth="0"
            SelectionMode="Single">

            <DataGrid.Columns>
                <!--  🕓 Sana  -->
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding OperationDate, StringFormat={}{0:dd.MM.yyyy}}"
                    Header="Sana">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="1.5*"
                    Binding="{Binding Customer}"
                    Header="Mijoz">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!--  Mahsulot turi  -->
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Category}"
                    Header="Mahsulot turi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="1.7*"
                    Binding="{Binding Name}"
                    Header="Nomi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding RollLength, StringFormat={}{0:N0}}"
                    Header="Rulon uzunligi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Quantity, StringFormat={}{0:N0}}"
                    Header="Rulon soni">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TotalCount, StringFormat={}{0:N0}}"
                    Header="Jami">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Unit}"
                    Header="O‘lchov birligi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Price, StringFormat={}{0:N2}}"
                    Header="Narxi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="1.5*"
                    Binding="{Binding TotalAmount, StringFormat={}{0:N2}}"
                    Header="Umumiy summa">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

<Page x:Class="VoltStream.WPF.Sales.Views.SalesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:VoltStream.WPF.Sales.Views"
      xmlns:controls="clr-namespace:VoltStream.WPF.Commons.UserControls"
      xmlns:utils="clr-namespace:VoltStream.WPF.Commons.Utils"
      xmlns:model="clr-namespace:VoltStream.WPF.Supplies.Models"
      xmlns:converter="clr-namespace:VoltStream.WPF.Commons.Converters"
      Loaded="Page_Loaded"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="SalesPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"
                                  MaxWidth="500" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="6" />
                </Grid.RowDefinitions>
                <Label Content="Sana:"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Margin="5 0 0 0" />
                <Label Grid.Row="1"
                       Content="Mijoz:"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Margin="5 0 0 0" />
                <Label Grid.Row="2"
                       Content="Val. turi:"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Margin="5 0 0 0" />
                <Label Grid.Row="3"
                       Content="Chegirma:"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Margin="5 0 0 0" />
                <Label Grid.Row="4"
                       Content="Izox:"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Margin="5 0 0 0" />
                <Grid Grid.Row="0"
                      Grid.Column="1">
                    <controls:UserCalendar x:Name="saleDate"
                                           SelectedDate="{Binding OperationDate}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Width="150"
                                           FontSize="14"
                                           LostFocus="supplyDate_LostFocus"
                                           Margin="0 0 10 0"
                                           utils:EnterKeyTab.IsEnabled="True" />
                </Grid>
                <Grid Grid.Row="1"
                      Grid.Column="1">
                    <ComboBox x:Name="CustomerName"
                              IsEditable="True"
                              Text="{Binding CustomerName}"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Stretch"
                              FontSize="14"
                              Margin="0 2 0 2"
                              utils:ComboBoxQuickNavBehavior.EnableQuickNavigation="True" />
                </Grid>
                <Grid Grid.Row="2"
                      Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="CurrencyType"
                              Text="{Binding CurrencyType}"
                              DisplayMemberPath="Name"
                              IsEditable="False"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Stretch"
                              FontSize="14"
                              IsReadOnly="True"
                              IsTabStop="False" 
                              Margin="0 2 10 2" />

                    <Label Grid.Column="1"
                           Content="Jami summa:"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           FontSize="14" />
                    <TextBox Grid.Column="2"
                             x:Name="TotalSum"
                             Text="{Binding TotalSum}"
                             VerticalAlignment="Top"
                             FontSize="14"
                             Margin="0 2 0 0"
                             IsReadOnly="True"
                             IsTabStop="False"
                             utils:NumericTextBox.IsNumeric="True"
                             utils:TextBoxTabBehavior.EnableTabOnKeys="True"
                             Height="25" />
                </Grid>
                <Grid Grid.Row="3"
                      Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="35" />
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtTotalDiscount"
                                 Text="{Binding TotalDiscount}"
                                 VerticalAlignment="Stretch"
                                 HorizontalAlignment="Stretch"
                                 FontSize="14"
                                 Margin="0 2"
                                 IsReadOnly="True"
                                 IsTabStop="False"
                                 utils:NumericTextBox.IsNumeric="True"
                                 utils:TextBoxTabBehavior.EnableTabOnKeys="True" />
                        <Border Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                BorderThickness="0.5"
                                Margin="2 2 10 2"
                                BorderBrush="#888">
                            <CheckBox x:Name="checkedDiscount"
                                      IsChecked="{Binding CheckedDiscount}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      FontSize="12"
                                      utils:EnterKeyTab.IsEnabled="True"
                                      Click="CheckedDiscount_Click" />
                        </Border>
                    </Grid>
                    <Label Grid.Column="1"
                           Content="To'lashga:"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontSize="14"
                           Margin="1 0 0 0" />
                    <TextBox Grid.Column="2"
                             x:Name="finalSumm"
                             Text="{Binding FinalSum}"
                             VerticalAlignment="Stretch"
                             HorizontalAlignment="Stretch"
                             FontSize="14"
                             Margin="0 2"
                             IsReadOnly="True"
                             IsTabStop="False"
                             utils:NumericTextBox.IsNumeric="True"
                             utils:TextBoxTabBehavior.EnableTabOnKeys="True" />


                </Grid>
                <Grid Grid.Row="4"
                      Grid.Column="1">
                    <TextBox x:Name="noteTextBox"
                             Text="{Binding Description}"
                             VerticalAlignment="Stretch"
                             HorizontalAlignment="Stretch"
                             FontSize="14"
                             Margin="0 2"
                             utils:TextBoxTabBehavior.EnableTabOnKeys="True" />
                </Grid>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Text="Hisob:"
                               FontSize="12"
                               FontWeight="Bold"
                               FontStyle="Italic"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="{Binding ElementName=beginBalans,
                               Path=Text.IsEmpty,
                               Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                    <TextBlock Grid.Row="1"
                               Text="Joriy:"
                               VerticalAlignment="Center"
                               Visibility="{Binding ElementName=beginBalans,
                               Path=Text.IsEmpty,
                               Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                    <TextBox Grid.Row="1"
                             x:Name="beginBalans"
                             IsReadOnly="True"
                             IsTabStop="False"
                             Background="Transparent"
                             HorizontalContentAlignment="Right"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             BorderThickness="0"
                             FontSize="12"
                             Margin="35 2 2 2"
                             utils:NumericTextBox.IsNumeric="True" />
                    <TextBlock Grid.Row="2"
                               Text="Natija:"
                               VerticalAlignment="Center"
                               Visibility="{Binding ElementName=lastBalans,
                               Path=Text.IsEmpty,
                               Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                    <TextBox Grid.Row="2"
                             x:Name="lastBalans"
                             IsReadOnly="True"
                             IsTabStop="False"
                             Background="Transparent"
                             HorizontalContentAlignment="Right"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             BorderThickness="0"
                             FontSize="12"
                             Margin="35 2 2 2"
                             utils:NumericTextBox.IsNumeric="True" />
                    <TextBlock Grid.Row="3"
                               Text="Telefon:"
                               VerticalAlignment="Center"
                               Visibility="{Binding ElementName=tel,
                               Path=Text.IsEmpty,
                               Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                    <TextBox Grid.Row="3"
                             x:Name="tel"
                             IsReadOnly="True"
                             IsTabStop="False"
                             Background="Transparent"
                             BorderThickness="0"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             FontSize="12"
                             Margin="42 2 2 2" />
                    <Grid Grid.Row="4">

                    </Grid>

                </Grid>

            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"
                                  MinWidth="120" />
                <ColumnDefinition Width="1.8*"
                                  MinWidth="120" />
                <ColumnDefinition Width="*"
                                  MaxWidth="90" />
                <ColumnDefinition Width="*"
                                  MaxWidth="80" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*"
                                  MaxWidth="100" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*"
                                  MaxWidth="85" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Maxsulot turi"
                       Style="{StaticResource FloatingLabelStyle}"
                       Tag="{Binding ElementName=cbxCategoryName}"
                       IsHitTestVisible="False"
                       Panel.ZIndex="1" />
            <ComboBox x:Name="cbxCategoryName"
                      Text="{Binding CategoryName}"
                      IsEditable="True"
                      Margin="1 3"
                      FontSize="14"
                      utils:ComboBoxQuickNavBehavior.EnableQuickNavigation="True" />
            <TextBlock Grid.Column="1"
                       Text="Maxsulot nomi"
                       Style="{StaticResource FloatingLabelStyle}"
                       Tag="{Binding ElementName=cbxProductName}"
                       IsHitTestVisible="False"
                       Panel.ZIndex="1" />
            <ComboBox Grid.Column="1"
                      x:Name="cbxProductName"
                      Text="{Binding ProductName}"
                      IsEditable="True"
                      Margin="1 3"
                      FontSize="14"
                      utils:ComboBoxQuickNavBehavior.EnableQuickNavigation="True" />
            <TextBlock Grid.Column="2"
                       Text="Rulon metr"
                       Style="{StaticResource FloatingLabelStyle}"
                       Tag="{Binding ElementName=cbxPerRollCount}"
                       IsHitTestVisible="False"
                       Panel.ZIndex="1" />
            <ComboBox Grid.Column="2"
                      x:Name="cbxPerRollCount"
                      Text="{Binding Stocks.LengthPerRoll}"
                      Margin="2 3"
                      IsEditable="True"
                      FontSize="14"
                      utils:ComboBoxQuickNavBehavior.EnableQuickNavigation="True" />
            <TextBlock Grid.Column="3"
                       Text="Rulon soni"
                       Style="{StaticResource FloatingLabelStyle}"
                       Tag="{Binding ElementName=txtRollCount}"
                       IsHitTestVisible="False"
                       Panel.ZIndex="1" />
            <TextBox Grid.Column="3"
                     x:Name="txtRollCount"
                     Text="{Binding RollCount}"
                     Margin="1 3"
                     FontSize="14"
                     utils:NumericTextBox.DecimalDigits="0"
                     utils:TextBoxTabBehavior.EnableTabOnKeys="True"
                     utils:NumericTextBox.IsNumeric="True" />
            <TextBlock Grid.Column="4"
                       Text="Jami metr"
                       Style="{StaticResource FloatingLabelStyle}"
                       Tag="{Binding ElementName=txtQuantity}"
                       IsHitTestVisible="False"
                       Panel.ZIndex="1" />
            <TextBox Grid.Column="4"
                     x:Name="txtQuantity"
                     Text="{Binding Quantity}"
                     Margin="1 3"
                     FontSize="14"
                     utils:TextBoxTabBehavior.EnableTabOnKeys="True"
                     utils:NumericTextBox.IsNumeric="True" />
            <TextBlock Grid.Column="5"
                       Text="Narxi"
                       Style="{StaticResource FloatingLabelStyle}"
                       Tag="{Binding ElementName=txtPrice}"
                       IsHitTestVisible="False"
                       Panel.ZIndex="1" />
            <TextBox Grid.Column="5"
                     x:Name="txtPrice"
                     Text="{Binding Price}"
                     Margin="1 3"
                     FontSize="14"
                     utils:TextBoxTabBehavior.EnableTabOnKeys="True"
                     utils:NumericTextBox.IsNumeric="True" />
            <TextBlock Grid.Column="6"
                       Text="Jami summa"
                       Style="{StaticResource FloatingLabelStyle}"
                       Tag="{Binding ElementName=txtSum}"
                       IsHitTestVisible="False"
                       Panel.ZIndex="1" />
            <TextBox Grid.Column="6"
                     x:Name="txtSum"
                     Margin="1 3"
                     Text="{Binding Sum}"
                     FontSize="14"
                     utils:TextBoxTabBehavior.EnableTabOnKeys="True"
                     utils:NumericTextBox.IsNumeric="True" />
            <TextBlock Grid.Column="7"
                       Text="Chegirma%"
                       Style="{StaticResource FloatingLabelStyle}"
                       Tag="{Binding ElementName=txtPerDiscount}"
                       IsHitTestVisible="False"
                       Panel.ZIndex="1" />
            <TextBox Grid.Column="7"
                     x:Name="txtPerDiscount"
                     Margin="1 3"
                     Text="{Binding PerDiscount}"
                     FontSize="14"
                     utils:TextBoxTabBehavior.EnableTabOnKeys="True"
                     utils:NumericTextBox.IsNumeric="True" />
            <TextBlock Grid.Column="8"
                       Text="Chegirma summasi"
                       Style="{StaticResource FloatingLabelStyle}"
                       Tag="{Binding ElementName=txtDiscount}"
                       IsHitTestVisible="False"
                       Panel.ZIndex="1" />
            <TextBox Grid.Column="8"
                     x:Name="txtDiscount"
                     Margin="1 3"
                     Text="{Binding Discount}"
                     FontSize="14"
                     utils:TextBoxTabBehavior.EnableTabOnKeys="True"
                     utils:NumericTextBox.IsNumeric="True" />
            <TextBlock Grid.Column="9"
                       Text="Umumiy summa"
                       Style="{StaticResource FloatingLabelStyle}"
                       Tag="{Binding ElementName=txtFinalSumProduct}"
                       IsHitTestVisible="False"
                       Panel.ZIndex="1" />
            <TextBox Grid.Column="9"
                     x:Name="txtFinalSumProduct"
                     Margin="1 3"
                     Text="{Binding FinalSumProduct}"
                     FontSize="14"
                     utils:TextBoxTabBehavior.EnableTabOnKeys="True"
                     utils:NumericTextBox.IsNumeric="True" />
            <Button Grid.Column="10"
                    x:Name="addButton"
                    Content="Qo'shish"
                    Margin="4 3"
                    FontSize="14"
                    Click="AddButton_Click" />
        </Grid>
        <Grid Grid.Row="2"
              Margin="0 5 0 5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid>
                <DataGrid x:Name="dataGrid"
                          ItemsSource="{Binding SaleItems}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          FontSize="14">
                    <DataGrid.Resources>
                        <Style x:Key="RightAlignedText"
                               TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment"
                                    Value="Right" />
                            <Setter Property="TextAlignment"
                                    Value="Right" />
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Maxsulot turi"
                                            Binding="{Binding CategoryName}"
                                            Width="1.5*"
                                            MinWidth="120" />
                        <DataGridTextColumn Header="Maxsulot nomi"
                                            Binding="{Binding ProductName}"
                                            Width="1.8*"
                                            MinWidth="120" />
                        <DataGridTextColumn Header="Rulon metr"
                                            Binding="{Binding PerRollCount}"
                                            ElementStyle="{StaticResource RightAlignedText}"
                                            Width="*" />
                        <DataGridTextColumn Header="Rulon soni"
                                            Binding="{Binding RollCount, Converter={StaticResource ToStringConverter}}"
                                            ElementStyle="{StaticResource RightAlignedText}"
                                            Width="*" />
                        <DataGridTextColumn Header="Jami metr"
                                            Binding="{Binding Quantity, Converter={StaticResource ToStringConverter}}"
                                            ElementStyle="{StaticResource RightAlignedText}"
                                            Width="*" />
                        <DataGridTextColumn Header="Narxi"
                                            Binding="{Binding Price, Converter={StaticResource ToStringConverter}}"
                                            ElementStyle="{StaticResource RightAlignedText}"
                                            utils:NumericTextBox.IsNumeric="True"
                                            Width="*" />
                        <DataGridTextColumn Header="Jami summa"
                                            Binding="{Binding Sum, Converter={StaticResource ToStringConverter}}"
                                            ElementStyle="{StaticResource RightAlignedText}"
                                            Width="*"
                                            utils:NumericTextBox.IsNumeric="True" />
                        <DataGridTextColumn Header="Chegirma%"
                                            Binding="{Binding PerDiscount, Converter={StaticResource ToStringConverter}}"
                                            ElementStyle="{StaticResource RightAlignedText}"
                                            Width="*" />
                        <DataGridTextColumn Header="Chegirma summasi"
                                            Binding="{Binding Discount, Converter={StaticResource ToStringConverter}}"
                                            utils:NumericTextBox.IsNumeric="True"
                                            ElementStyle="{StaticResource RightAlignedText}"
                                            Width="*" />
                        <DataGridTextColumn Header="Umumiy summa"
                                            Binding="{Binding FinalSumProduct, Converter={StaticResource ToStringConverter}}"
                                            ElementStyle="{StaticResource RightAlignedText}"
                                            utils:NumericTextBox.IsNumeric="True"
                                            Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <Grid Grid.Row="1"
                  Margin="0 0 10 5">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0 10 10 0">
                    <Button Content="Tozalash"
                            Background="#E74C3C"
                            Foreground="White"
                            FontSize="14"
                            Margin="0 0 6 0"
                            Padding="10 0"
                            Click="ClearButton_Click" />

                    <Button Content="Yuborish"
                            Background="#27AE60"
                            Foreground="White"
                            FontSize="14"
                            Padding="10 0"
                            Click="SubmitButton_Click" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>

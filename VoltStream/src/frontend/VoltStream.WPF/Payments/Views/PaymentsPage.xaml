<Page x:Class="VoltStream.WPF.Payments.Views.PaymentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:VoltStream.WPF.Payments.Views"
      xmlns:controls="clr-namespace:VoltStream.WPF.Commons.UserControls"
      xmlns:utils="clr-namespace:VoltStream.WPF.Commons.Utils"
      xmlns:converter="clr-namespace:VoltStream.WPF.Commons.Converters"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="950"
      Title="PaymentsPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0"
                       Grid.Column="0"
                       Content="Sana:"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Margin="5,0,0,0" />
                <Label Grid.Row="1"
                       Grid.Column="0"
                       Content="Mijoz:"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Margin="5,0,0,0" />
                <Label Grid.Row="2"
                       Grid.Column="0"
                       Content="Val. turi:"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Margin="5,0,0,0" />
                <Grid Grid.Row="0"
                      Grid.Column="1">
                    <controls:UserCalendar x:Name="PaymentDate"
                                           SelectedDate="{Binding Payment.PaidAt}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Width="150"
                                           FontSize="14"
                                           Margin="5,0,30,0"
                                           utils:EnterKeyTab.IsEnabled="True" />
                </Grid>
                <Grid Grid.Row="1"
                      Grid.Column="1">
                    <ComboBox x:Name="CustomerName"
                              IsEditable="True"
                              ItemsSource="{Binding AvailableCustomers}"
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding Customer}"
                              VerticalAlignment="Center"
                              PreviewLostKeyboardFocus="CustomerName_PreviewLostKeyboardFocus"
                              HorizontalAlignment="Stretch"
                              FontSize="14"
                              Margin="5,1"
                              utils:ComboBoxTabBehavior.EnableTabOnSelect="True" />
                </Grid>
                <Grid Grid.Row="2"
                      Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="70" />
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="CurrencyType"
                              IsEditable="True"
                              ItemsSource="{Binding AvailableCurrencies}"
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding Currency}"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Stretch"
                              FontSize="14"
                              Margin="5,1,5,1"
                              utils:ComboBoxTabBehavior.EnableTabOnSelect="True" />
                    <TextBlock Grid.Column="1"
                               Text="kurs /(%)"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Margin="20,2,5,2" />
                    <TextBox x:Name="Kurs"
                             Grid.Column="2"
                             Margin="5,2"
                             Text="{Binding Payment.ExchangeRate}"
                             utils:NumericTextBox.IsNumeric="True"
                             utils:TextBoxTabBehavior.EnableTabOnKeys="True" />
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="210" />
                    <ColumnDefinition Width="Auto" MinWidth="350"
                                      MaxWidth="500" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Grid.Row="0"
                           Content="Summa:"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Foreground="#888"
                           Margin="5,0,0,0"
                           FontStyle="Italic" />
                    <Label Grid.Column="0"
                           Grid.Row="1"
                           Content="Kirim:"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Margin="5,0,0,0" />
                    <Label Grid.Column="0"
                           Grid.Row="2"
                           Content="Chiqim:"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Margin="5,0,0,0" />
                    <TextBox Grid.Column="1"
                             Grid.Row="0"
                             x:Name="Summa"
                             IsReadOnly="True"
                             IsTabStop="False"
                             FontSize="14" BorderThickness="0"
                             Margin="5,2"
                             Text="{Binding Payment.Amount}"
                             FontStyle="Italic"
                             Background="Transparent"
                             utils:NumericTextBox.IsNumeric="True" />
                    <TextBox Grid.Column="1"
                             Grid.Row="1"
                             x:Name="Kirim"
                             FontSize="14"
                             Margin="5,2"
                             IsEnabled="{Binding Payment.IsIncomeEnabled}"
                             utils:NumericTextBox.IsNumeric="True"
                             utils:TextBoxTabBehavior.EnableTabOnKeys="True"
                             Text="{Binding Payment.IncomeAmount, Converter={StaticResource StringToNullableDecimalConverter}}"/>
                    <!--Visibility="{Binding ElementName=Chiqim, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}"/>-->
                    <TextBox Grid.Column="1"
                             Grid.Row="2"
                             x:Name="Chiqim"
                             FontSize="14"
                             Margin="5,2"
                             IsEnabled="{Binding Payment.IsExpenseEnabled}"
                             utils:TextBoxTabBehavior.EnableTabOnKeys="True"
                             utils:NumericTextBox.IsNumeric="True"
                             Text="{Binding Payment.ExpenseAmount, Converter={StaticResource StringToNullableDecimalConverter}}"/>
                    <!--Visibility="{Binding ElementName=Kirim, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}"-->
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                               Text="Balans:"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Foreground="#888"
                               Margin="5,0,0,0"
                               FontStyle="Italic"
                               Visibility="{Binding ElementName=beginBalans, Path=Text.IsEmpty, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        <TextBox Grid.Column="1"
                                 x:Name="beginBalans"
                                 IsReadOnly="True" IsTabStop="False"
                                 FontSize="14" Margin="5,2"
                                 FontStyle="Italic" BorderThickness="0"
                                 Background="Transparent"
                                 utils:NumericTextBox.IsNumeric="   True"
                                 Text="{Binding Customer.Balance}" />
                        <TextBlock Grid.Column="2"
                               Text="Natija:"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Foreground="#888"
                               Margin="5,0,0,0"
                               FontStyle="Italic"
                               Visibility="{Binding ElementName=lastBalans, Path=Text.IsEmpty, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        <TextBox Grid.Column="3"
                                 Text="{Binding Payment.LastBalance}"
                                 x:Name="lastBalans"
                                 IsReadOnly="True" IsTabStop="False"
                                 FontSize="14"
                                 Margin="5,2"
                                 FontStyle="Italic" BorderThickness="0"
                                 Background="Transparent"
                                 utils:NumericTextBox.IsNumeric="True" />
                        <TextBlock Grid.Column="4"
                               Text="Chegirma:"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Foreground="#888"
                               Margin="2,0,0,0"
                               FontStyle="Italic"
                               Visibility="{Binding ElementName=Discount, Path=Text.IsEmpty, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        <TextBox Grid.Column="5"
                                 Text="{Binding Payment.Discount}"
                                 x:Name="Discount"
                                 IsReadOnly="True" IsTabStop="False"
                                 FontSize="14"
                                 Margin="5,2"
                                 FontStyle="Italic" BorderThickness="0"
                                 Background="Transparent"
                                 utils:NumericTextBox.IsNumeric="True" />
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0"
                               Content="Izox:"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Margin="5,0,11,0" />
                        <TextBox Grid.Column="1"
                                 x:Name="Discription"
                                 Text="{Binding Payment.Description}"
                                 FontSize="14"
                                 Margin="5,2,5,2"
                                 utils:TextBoxTabBehavior.EnableTabOnKeys="True" />
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1"
                                x:Name="btnPaymant"
                                Margin="5,2,2,2"
                                Content="Saqlash"
                                FontSize="14"
                                Command="{Binding SubmitCommand}"
                                FontWeight="Bold" />
                        <Button Grid.Column="2"
                                x:Name="btnDiscount"
                                Margin="50,2,5,2"
                                Content=" Discount "
                                FontSize="12"
                                FontWeight="Bold" />
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <DataGrid Grid.Row="1">


        </DataGrid>
    </Grid>
</Page>

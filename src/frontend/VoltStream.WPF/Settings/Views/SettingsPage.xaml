<Page x:Name="RootPage"
      x:Class="VoltStream.WPF.Settings.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:VoltStream.WPF.Settings.ViewModels"
      xmlns:conv="clr-namespace:VoltStream.WPF.Commons.Converters"
      xmlns:utils="clr-namespace:VoltStream.WPF.Commons.Utils"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      Title="Sozlamalar">

    <Grid>
        <TabControl FontSize="14">
            <!-- ðŸŸ¢ Aloqa Sozlamalari -->
            <TabItem Header="Aloqa">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Status -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,20">
                        <TextBlock Text="{Binding ApiConnection.Url}"
                                   Foreground="{Binding ApiConnection.StatusColor}"
                                   FontWeight="Bold"
                                   FontSize="16" />
                    </StackPanel>

                    <!-- Form -->
                    <StackPanel Grid.Row="1"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Center"
                                Width="320"
                                Margin="0,0,0,20"
                                Orientation="Vertical">

                        <!-- URL konfiguratsiyasi -->
                        <GroupBox Header="Server manzili"
                                  Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <CheckBox Content="HTTPS ishlatilsin"
                                          IsChecked="{Binding ApiConnection.IsHttps}"
                                          Margin="0,5" />

                                <Grid Margin="0,5">
                                    <TextBox x:Name="HostTextBox"
                                             Text="{Binding ApiConnection.Host, UpdateSourceTrigger=PropertyChanged}"
                                             Background="Transparent"
                                             BorderBrush="Gray"
                                             Padding="5" />
                                    <TextBlock Text="Host (masalan: localhost)"
                                               Foreground="Gray"
                                               Margin="5,0,0,0"
                                               IsHitTestVisible="False"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding Text, ElementName=HostTextBox, Converter={StaticResource EmptyToVisibleConverter}}" />
                                </Grid>

                                <Grid Margin="0,5">
                                    <TextBox x:Name="PortTextBox"
                                             Text="{Binding ApiConnection.Port, UpdateSourceTrigger=PropertyChanged}"
                                             Background="Transparent"
                                             BorderBrush="Gray"
                                             Padding="5" />
                                    <TextBlock Text="Port (masalan: 5000)"
                                               Foreground="Gray"
                                               Margin="5,0,0,0"
                                               IsHitTestVisible="False"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding Text, ElementName=PortTextBox, Converter={StaticResource EmptyToVisibleConverter}}" />
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <!-- Real-time sozlamalar -->
                        <GroupBox Header="Ulanish xatti-harakatlari"
                                  Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <CheckBox Content="Avto-ulanish yoqilgan"
                                          IsChecked="{Binding ApiConnection.AutoReconnectEnabled}"
                                          Margin="0,5" />
                                <CheckBox Content="URLni tekshirish"
                                          IsChecked="{Binding ApiConnection.CheckUrlEnabled}"
                                          Margin="0,5" />
                                <CheckBox Content="Indikator koâ€˜rsatiladi"
                                          IsChecked="{Binding ApiConnection.ShowIndicator}"
                                          Margin="0,5"
                                          Visibility="{Binding ApiConnection.CheckUrlEnabled, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>

                    <!-- Save Button -->

                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                    <Button Content="Manzilni saqlash"
                                Command="{Binding ApiConnection.SaveCommand}"
                            Width="140"
                            Height="35"
                            ToolTip="Host, port va HTTPS asosida URLni yaratadi"
                            Margin="15 0 0 0"
                            Background="ForestGreen"
                            Foreground="White"
                            FontWeight="SemiBold">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="5"
                                        BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="10,2" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- ðŸ’± Valyuta Sozlamalari -->
            <TabItem Header="Valyutalar"
                     Height="25"
                     Margin="-2,-2,-2,0"
                     VerticalAlignment="Top">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Header -->
                        <RowDefinition Height="*" />
                        <!-- Scrollable list -->
                        <RowDefinition Height="Auto" />
                        <!-- Buttons -->
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0"
                            BorderBrush="LightGray"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="10"
                            Margin="0 5 17 0"
                            Background="White"
                            SnapsToDevicePixels="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="90" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Odatiy"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />

                            <TextBlock Text="Faol"
                                       FontWeight="SemiBold"
                                       Grid.Column="1"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />

                            <TextBlock Text="Naqd"
                                       FontWeight="SemiBold"
                                       Grid.Column="2"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />

                            <TextBlock Text="O'zgaruvchan"
                                       FontWeight="SemiBold"
                                       Grid.Column="3"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />

                            <TextBlock Text="Nomi"
                                       FontWeight="SemiBold"
                                       Grid.Column="4"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />

                            <TextBlock Text="Kodi"
                                       Grid.Column="5"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />

                            <TextBlock Text="Belgisi"
                                       Grid.Column="6"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />

                            <TextBlock Text="Kurs"
                                       Grid.Column="7"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />

                            <TextBlock Text="Amallar"
                                       Grid.Column="8"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Border>

                    <!-- Scrollable valyuta roâ€˜yxati -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  Margin="0,5">
                        <ItemsControl ItemsSource="{Binding Currencies}"
                                      AllowDrop="True"
                                      Drop="ItemsControl_Drop">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="LightGray"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="10"
                                            Margin="0,5"
                                            Background="White"
                                            SnapsToDevicePixels="True">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <fa:IconImage Icon="GripVertical"
                                                          Width="16"
                                                          Height="16"
                                                          Cursor="SizeAll"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Left"
                                                          Margin="4"
                                                          MouseDown="DragHandle_MouseDown"
                                                          MouseMove="DragHandle_MouseMove"
                                                          MouseUp="DragHandle_MouseUp"
                                                          ToolTip="Joyini oâ€˜zgartirish" />
                                            
                                            <RadioButton GroupName="DefaultCurrency"
                                                         IsChecked="{Binding IsDefault}"
                                                         IsEnabled="{Binding IsActive}"
                                                         ToolTip="Default valyuta"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center">
                                                <RadioButton.Resources>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Width"
                                                                Value="12" />
                                                        <Setter Property="Height"
                                                                Value="12" />
                                                    </Style>
                                                </RadioButton.Resources>
                                            </RadioButton>

                                            <CheckBox IsChecked="{Binding IsActive}"
                                                      Grid.Column="1"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Command="{Binding GetMiddlemanCommand}" />

                                            <CheckBox IsChecked="{Binding IsCash}"
                                                      Grid.Column="2"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Command="{Binding GetMiddlemanCommand}" />

                                            <CheckBox IsChecked="{Binding IsEditable}"
                                                      Grid.Column="3"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Command="{Binding GetMiddlemanCommand}" />

                                            <TextBox Text="{Binding Name}"
                                                     BorderThickness="0"
                                                     HorizontalAlignment="Center"
                                                     Grid.Column="4" />

                                            <TextBox Text="{Binding Code}"
                                                     BorderThickness="0"
                                                     HorizontalAlignment="Center"
                                                     Grid.Column="5" />

                                            <TextBox Text="{Binding Symbol}"
                                                     BorderThickness="0"
                                                     HorizontalAlignment="Center"
                                                     Grid.Column="6" />

                                            <TextBox Text="{Binding ExchangeRate}"
                                                     BorderThickness="0"
                                                     HorizontalAlignment="Center"
                                                     Grid.Column="7" />

                                            <Button Content="Oâ€˜chirish"
                                                    Grid.Column="8"
                                                    HorizontalAlignment="Center"
                                                    BorderThickness="0"
                                                    Command="{Binding DataContext.RemoveCurrencyCommand, ElementName=RootPage}"
                                                    CommandParameter="{Binding}"
                                                    Background="Tomato"
                                                    Foreground="White"
                                                    Width="80"
                                                    Padding="5 "
                                                    ToolTip="Valyutani oâ€˜chirish" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Qoâ€˜shish va Saqlash tugmalari -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                        <Button Content="Valyuta qoâ€˜shish"
                                Command="{Binding AddCurrencyCommand}"
                                Width="140"
                                Height="35"
                                Background="#007ACC"
                                Foreground="White"
                                FontWeight="SemiBold">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="10,2" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Content="Saqlash"
                                Command="{Binding SaveCurrenciesCommand}"
                                Width="140"
                                Height="35"
                                Margin="15 0 0 0"
                                Background="ForestGreen"
                                Foreground="White"
                                FontWeight="SemiBold">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="10,2" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!--Nomlarni oâ€˜zgartirish -->
            <TabItem Header="Nomlarni oâ€˜zgartirish">
                <Grid Margin="50">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" MinWidth="200" />
                        <ColumnDefinition Width="*" MinWidth="200" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Maxsulot turi:"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Foreground="#0A003A" />
                    <TextBlock Grid.Row="0" Grid.Column="1"
                               Panel.ZIndex="1"
                               IsHitTestVisible="False"
                               Style="{StaticResource FloatingLabelStyle}"
                               Tag="{Binding ElementName=cbxCategoryOldName}"
                               Text="Eski nomi" />
                    <ComboBox Grid.Row="0" Grid.Column="1" 
                               x:Name="cbxCategoryOldName"
                                 Margin="5,15"
                                 FontSize="14"
                                 IsEditable="True"
                                 ItemsSource="{Binding Categories}"
                                 SelectedItem="{Binding SelectedOldCategory}"
                                 DisplayMemberPath="Name"
                                />
                    <TextBlock Grid.Row="0" Grid.Column="2"
                               Panel.ZIndex="1"
                               IsHitTestVisible="False"
                               Style="{StaticResource FloatingLabelStyle}"
                               Tag="{Binding ElementName=txtCategoryNewName}"
                               Text="Yangi nomi" />
                    <TextBox Grid.Row="0" Grid.Column="2" 
                               x:Name="txtCategoryNewName"
                                 Margin="5,15"
                                 FontSize="14"
                                 Text="{Binding NewCategoryName, UpdateSourceTrigger=PropertyChanged}"
                                />
                    <Button Grid.Row="0" Grid.Column="3"
                            Content="O'zgartirish"
                            Width="100"
                            Height="30"
                            Margin="10,10"
                            Background="#0A003A"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Command="{Binding UpdateCategoryCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="5"
                                        BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="10,2" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <TextBlock Grid.Row="1" Grid.Column="0"  Text="Maxsulot nomi:"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Foreground="#0A003A" />
                    <TextBlock Grid.Row="1" Grid.Column="1"
                               Panel.ZIndex="1"
                               IsHitTestVisible="False"
                               Style="{StaticResource FloatingLabelStyle}"
                               Tag="{Binding ElementName=cbxProductOldName}"
                               Text="Eski nomi" />
                    <ComboBox Grid.Row="1" Grid.Column="1" 
                               x:Name="cbxProductOldName"
                                 Margin="5,15"
                                 FontSize="14"
                                 IsEditable="True"
                                 ItemsSource="{Binding Products}"
                                 SelectedItem="{Binding SelectedOldProduct}"
                                 DisplayMemberPath="Name"
                                />
                    <TextBlock Grid.Row="1" Grid.Column="2"
                               Panel.ZIndex="1"
                               IsHitTestVisible="False"
                               Style="{StaticResource FloatingLabelStyle}"
                               Tag="{Binding ElementName=txtProductNewName}"
                               Text="Yangi nomi" />
                    <TextBox Grid.Row="1" Grid.Column="2" 
                               x:Name="txtProductNewName"
                                 Margin="5,15"
                                 FontSize="14"
                                 Text="{Binding NewProductName, UpdateSourceTrigger=PropertyChanged}"
                                />
                    <Button Grid.Row="1" Grid.Column="3"
                            Content="O'zgartirish"
                            Width="100"
                            Height="30"
                            Margin="10,10"
                            Background="#0A003A"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Command="{Binding UpdateProductCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="5"
                                        BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="10,2" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <TextBlock Grid.Row="2" Grid.Column="0"  Text="Mijoz nomi:"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Foreground="#0A003A" />
                    <TextBlock Grid.Row="2" Grid.Column="1"
                               Panel.ZIndex="1"
                               IsHitTestVisible="False"
                               Style="{StaticResource FloatingLabelStyle}"
                               Tag="{Binding ElementName=cbxCustomerOldName}"
                               Text="Eski nomi" />
                    <ComboBox Grid.Row="2" Grid.Column="1" 
                               x:Name="cbxCustomerOldName"
                                 Margin="5,15"
                                 FontSize="14"
                                 IsEditable="True"
                                 ItemsSource="{Binding Customers}"
                                 SelectedItem="{Binding SelectedOldCustomer}"
                                 DisplayMemberPath="Name"
                                />
                    <TextBlock Grid.Row="2" Grid.Column="2"
                               Panel.ZIndex="1"
                               IsHitTestVisible="False"
                               Style="{StaticResource FloatingLabelStyle}"
                               Tag="{Binding ElementName=txtCustomerNewName}"
                               Text="Yangi nomi" />
                    <TextBox Grid.Row="2" Grid.Column="2" 
                               x:Name="txtCustomerNewName"
                                 Margin="5,15"
                                 FontSize="14"
                                 Text="{Binding NewCustomerName, UpdateSourceTrigger=PropertyChanged}"
                                />
                    <Button Grid.Row="2" Grid.Column="3"
                            Content="O'zgartirish"
                            Width="100"
                            Height="30"
                            Margin="10,10"
                            Background="#0A003A"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Command="{Binding UpdateCustomerCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="5"
                                        BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="10,2" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <TextBlock Grid.Row="3" Grid.Column="0"  Text="Maxsulotning turini almashtirish"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Top"
                               Margin="0,15,0,0"
                               Foreground="#0A003A" 
                               TextWrapping="Wrap"/>
                    <Grid Grid.Row="3" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Panel.ZIndex="1"
                               IsHitTestVisible="False"
                               Style="{StaticResource FloatingLabelStyle}"
                               Tag="{Binding ElementName=cbxProductName}"
                               Text="Maxsulot nomi" />
                    <ComboBox Grid.Row="0" 
                               x:Name="cbxProductName"
                                 Margin="5,15"
                                 FontSize="14"
                                 IsEditable="True"
                                 ItemsSource="{Binding Products}"
                                 SelectedItem="{Binding SelectedProductToChangeCategory}"
                                 DisplayMemberPath="Name" />
                                
                    </Grid>
                    <Grid Grid.Row="3" Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0"
                               Panel.ZIndex="1"
                               IsHitTestVisible="False"
                               Style="{StaticResource FloatingLabelStyle}"
                               Tag="{Binding ElementName=txtCategoryOldName}"
                               Text="Eski turi" />
                        <TextBox Grid.Row="0" 
                               x:Name="txtCategoryOldName"
                                 Margin="5,15"
                                 FontSize="14"
                                 IsEnabled="False"
                                 Text="{Binding CurrentCategoryName}"
                               />
                        <TextBlock Grid.Row="1"
                               Panel.ZIndex="1"
                               IsHitTestVisible="False"
                               Style="{StaticResource FloatingLabelStyle}"
                               Tag="{Binding ElementName=cbxCategoryChangedName}"
                               Text="Yangi turi" />
                        <ComboBox Grid.Row="1" 
                               x:Name="cbxCategoryChangedName"
                                 Margin="5,10"
                                 FontSize="14"
                                 IsEditable="True"
                                 ItemsSource="{Binding Categories}"
                                 SelectedItem="{Binding SelectedNewCategory}"
                                 DisplayMemberPath="Name"
                                />


                    </Grid>
                    <Button Grid.Row="3" Grid.Column="3"
                            Content="Almashtirish"
                            Width="100"
                            Height="45"
                            Margin="10,10"
                            Background="#0A003A"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Command="{Binding ChangeProductCategoryCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="5"
                                        BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Margin="10,2" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>


                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>

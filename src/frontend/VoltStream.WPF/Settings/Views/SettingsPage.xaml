<Page x:Name="RootPage"
      x:Class="VoltStream.WPF.Settings.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:VoltStream.WPF.Settings.ViewModels"
      xmlns:modules="clr-namespace:VoltStream.WPF.Settings.Views.Modules"
      xmlns:conv="clr-namespace:VoltStream.WPF.Commons.Converters"
      xmlns:utils="clr-namespace:VoltStream.WPF.Commons.Utils"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      Title="Sozlamalar">

    <Grid Margin="10">
        <TabControl FontSize="14">
            <!-- ðŸŸ¢ Aloqa Sozlamalari -->
            <TabItem Header="Aloqa">
                <modules:ConnectionSettingsView DataContext="{Binding ApiConnection}" />
            </TabItem>

            <!-- ðŸ’± Valyuta Sozlamalari -->
            <TabItem Header="Valyutalar">
                <modules:CurrencySettingsView DataContext="{Binding}" />
            </TabItem>

            <!-- Categoriyalar -->
            <TabItem Header="Kategoriyalar">
                <modules:CategorySettingsView DataContext="{Binding CategorySettings}" />
            </TabItem>

            <!-- Mahsulotlar -->
            <TabItem Header="Mahsulotlar">
                <modules:ProductSettingsView DataContext="{Binding ProductSettings}" />
            </TabItem>

            <!-- Mijozlar -->
            <TabItem Header="Mijozlar">
                <modules:CustomerSettingsView DataContext="{Binding CustomerSettings}" />
            </TabItem>
        </TabControl>
    </Grid>
</Page>

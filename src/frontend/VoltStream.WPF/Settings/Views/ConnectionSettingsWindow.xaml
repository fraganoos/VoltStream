<Window x:Class="VoltStream.WPF.Settings.Views.ConnectionSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:VoltStream.WPF.Commons.Converters"
        Title="Aloqa Sozlamalari"
        Height="580"
        Width="520"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Border CornerRadius="12"
            BorderThickness="2">

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#462AD8" Offset="0"/>
                <GradientStop Color="#28AEED" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#060531" Offset="0"/>
                <GradientStop Color="#1B1448" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="35"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="ALOQA SOZLAMALARI"
                              Foreground="DarkGray"
                              FontSize="10"
                              FontFamily="Montserrat"
                              Grid.Column="0"
                              VerticalAlignment="Center"
                              Margin="10,0,0,0"/>

                <Button x:Name="btnClose"
                        Grid.Column="1"
                        Content="âœ•"
                        Foreground="White"
                        FontSize="18"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BtnClose_Click"
                        VerticalAlignment="Center"
                        Margin="0,0,8,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#DA34AE"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <StackPanel Grid.Row="1" Margin="25 15 25 0">

                <!-- Status Display -->
                <Border Background="#1B1448"
                            CornerRadius="8"
                            Padding="15"
                        
                            Margin="0,0,0,20"
                            BorderThickness="1"
                            BorderBrush="#462AD8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Holat: "
                                          Foreground="LightGray"
                                          FontSize="13"
                                          FontFamily="Montserrat"/>
							<TextBlock Text="{Binding ApiConnection.StatusText}"
                                          Foreground="White"
                                          FontWeight="SemiBold"
                                          FontSize="13"
                                          FontFamily="Montserrat"/>
                        </StackPanel>

						<TextBlock Text="{Binding ApiConnection.Url}"
                                      Foreground="White"
                                      FontSize="12"
                                      HorizontalAlignment="Center"
                                      FontFamily="Montserrat"
                                      TextWrapping="Wrap"
                                      Opacity="0.8"/>
                    </StackPanel>
                </Border>

                <!-- URL Configuration -->
                <GroupBox Foreground="White"
                             BorderBrush="#462AD8"
                             BorderThickness="1"
                             Margin="0,0,0,15">
                    <GroupBox.Header>
                        <TextBlock Text="Server manzili"
                                      Foreground="White"
                                      FontFamily="Montserrat"
                                      FontWeight="SemiBold"
                                      FontSize="13"/>
                    </GroupBox.Header>

                    <StackPanel Margin="10">

                        <CheckBox Content="HTTPS ishlatilsin"
                                     IsChecked="{Binding ApiConnection.IsHttps, UpdateSourceTrigger=PropertyChanged}"
                                     Foreground="White"
                                     FontFamily="Montserrat"
                                     FontSize="12"
                                     Margin="0,5,0,10"/>

                        <TextBlock Text="Host"
                                      Foreground="LightGray"
                                      FontSize="11"
                                      FontFamily="Montserrat"
                                      Margin="0,5,0,3"/>

                        <TextBox x:Name="HostTextBox"
                                    Text="{Binding ApiConnection.Host, UpdateSourceTrigger=PropertyChanged}"
                                    Background="#0D0D2B"
                                    Foreground="White"
                                    BorderBrush="#462AD8"
                                    BorderThickness="1"
                                    FontFamily="Montserrat"
                                    FontSize="13"
                                    Padding="10,8"
                                    Height="36"
                                    VerticalContentAlignment="Center"/>

                        <TextBlock Text="Port"
                                      Foreground="LightGray"
                                      FontSize="11"
                                      FontFamily="Montserrat"
                                      Margin="0,10,0,3"/>

                        <TextBox x:Name="PortTextBox"
                                    Text="{Binding ApiConnection.Port, UpdateSourceTrigger=PropertyChanged}"
                                    Background="#0D0D2B"
                                    Foreground="White"
                                    BorderBrush="#462AD8"
                                    BorderThickness="1"
                                    FontFamily="Montserrat"
                                    FontSize="13"
                                    Padding="10,8"
                                    Height="36"
                                    VerticalContentAlignment="Center"/>
                    </StackPanel>
                </GroupBox>

                <!-- Connection Behaviors -->
                <GroupBox Foreground="White"
                             BorderBrush="#462AD8"
                             BorderThickness="1">
                    <GroupBox.Header>
                        <TextBlock Text="Ulanish xatti-harakatlari"
                                      Foreground="White"
                                      FontFamily="Montserrat"
                                      FontWeight="SemiBold"
                                      FontSize="13"/>
                    </GroupBox.Header>

                    <StackPanel Margin="10">
                        <CheckBox Content="Avto-ulanish yoqilgan"
                                     IsChecked="{Binding ApiConnection.AutoReconnectEnabled}"
                                     Foreground="White"
                                     FontFamily="Montserrat"
                                     FontSize="12"
                                     Margin="0,5"/>

                    </StackPanel>
                </GroupBox>

                <!-- Error/Success Messages -->
                <TextBlock Text="{Binding Error}"
                              Foreground="#FF6B6B"
                              FontSize="12"
                              FontFamily="Montserrat"
                              TextWrapping="Wrap"
                              Margin="0,10,0,0"
                              Visibility="{Binding Error, Converter={StaticResource StringToVisibilityConverter}}"/>

                <TextBlock Text="{Binding Success}"
                              Foreground="#51CF66"
                              FontSize="12"
                              FontFamily="Montserrat"
                              TextWrapping="Wrap"
                              Margin="0,15,0,0"
                              Visibility="{Binding Success, Converter={StaticResource StringToVisibilityConverter}}"/>

                <TextBlock Text="{Binding Warning}"
                              Foreground="#FFD43B"
                              FontSize="12"
                              FontFamily="Montserrat"
                              TextWrapping="Wrap"
                              Margin="0,15,0,0"
                              Visibility="{Binding Warning, Converter={StaticResource StringToVisibilityConverter}}"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2"
                       Orientation="Horizontal"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20">

                <Button Content="TEKSHIRISH"
                        Command="{Binding TestConnectionCommand}"
                        Width="140"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolToBoolConverter}}"
                        Height="40"
                        Margin="5"
                        Foreground="White"
                        FontFamily="Montserrat"
                        FontWeight="SemiBold"
                        FontSize="12"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF9800"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F57C00"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="20"
                                   Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="SAQLASH"
                        Command="{Binding SaveAndCloseCommand}"
                        Width="140"
                        Height="40"
                        Margin="5"
                        Foreground="White"
                        FontFamily="Montserrat"
                        FontWeight="SemiBold"
                        FontSize="12"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#462AD8"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#28AEED"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="20"
                                   Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
<UserControl
    x:Class="VoltStream.WPF.Commons.UserControls.UserCalendar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VoltStream.WPF.Commons.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <TextBox
                x:Name="TextBox"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalContentAlignment="Right" />
        </Grid>
        <Grid Grid.Column="1">
            <Button
                Margin="1,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Click="OpenCalendar_Click"
                Content="📅"
                IsTabStop="False" />
        </Grid>
        <Popup
            x:Name="Popup"
            PlacementTarget="{Binding ElementName=TextBox}"
            StaysOpen="False">
            <Border BorderBrush="Aqua" BorderThickness="1">
                <Calendar x:Name="calendar" SelectedDatesChanged="Calendar_SelectedDatesChanged" />
            </Border>
        </Popup>
    </Grid>
</UserControl>

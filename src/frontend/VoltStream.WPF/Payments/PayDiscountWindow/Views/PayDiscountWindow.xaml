<Window
    x:Class="VoltStream.WPF.Payments.PayDiscountWindow.Views.PayDiscountWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utils="clr-namespace:VoltStream.WPF.Commons.Utils"
    xmlns:viewModels="clr-namespace:VoltStream.WPF.Commons.ViewModels"
    Title="Yeg'ilgan Bonuslar taqsimoti"
    SizeToContent="WidthAndHeight"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    ResizeMode="NoResize"
    mc:Ignorable="d">


	<Border BorderBrush="LightGray" Margin="25"
            BorderThickness="1" 
            Background="White"  CornerRadius="5">
		<Border.Effect>
			<DropShadowEffect BlurRadius="20"       ShadowDepth="10"        Direction="270"        Color="Black"          Opacity="0.4"/>
		</Border.Effect>
		<Grid Margin="10">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="120" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>


			<TextBlock
            Grid.ColumnSpan="2"
            Margin="0,5"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="14"
            FontWeight="SemiBold"
            Text="Chegirmadan foydalanish:" />

			<TextBlock
            Grid.Row="1"
            Margin="0,5"
            VerticalAlignment="Center"
            Text="Mijoz:" />

			<TextBox
            x:Name="txtCustomer"
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,5"
            utils:TextBoxTabBehavior.EnableTabOnKeys="True"
            FontSize="14"
            IsEnabled="False" />

			<TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Text="Jami Bonuslar:" />

			<TextBox
            x:Name="AmauntDiscount"
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,5"
            utils:NumericInput.IsNumeric="True"
            utils:TextBoxTabBehavior.EnableTabOnKeys="True"
            FontSize="14"
            IsEnabled="False" />

			<TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Text="Foydalanish miqdori:" />

			<Grid Grid.Row="3" Grid.Column="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<TextBox
                x:Name="DiscountSum"
                Grid.Column="0"
                Margin="0,5"
                utils:NumericInput.IsNumeric="True"
                utils:TextBoxTabBehavior.EnableTabOnKeys="True"
                FontSize="14" />
				<Button
                Grid.Column="1"
                Margin="3,5,0,6"
                Padding="5,0"
                Click="Button_Click"
                Content="Σ"
                IsTabStop="False" />
			</Grid>

			<TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Text="Foydalanish:" />
			<Grid Grid.Row="4" Grid.Column="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<RadioButton
                x:Name="inCash"
                Grid.Column="0"
                Margin="0,5,3,5"
                Content="Naqd pulda"
                FontSize="14"
                Foreground="Red" />


				<RadioButton
                x:Name="reСalculation"
                Grid.Column="1"
                Margin="3,5,0,5"
                Content="Hisob-Kitob"
                FontSize="14" />
			</Grid>

			<TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Text="Izox:" />
			<TextBox
            x:Name="txtDescription"
            Grid.Row="5"
            Grid.Column="1"
            Margin="0,5"
            utils:TextBoxTabBehavior.EnableTabOnKeys="True"
            FontSize="14" />

			<StackPanel
            Grid.Row="6"
            Grid.Column="1"
            Margin="0,5,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
				<Button
                x:Name="SaveDiscount"
                Width="100"
                Margin="5"
                Click="SaveDiscount_Click"
                Content="Saqlash" />
				<Button
                Width="100"
                Margin="5"
                Content="Bekor qilish"
                IsCancel="True" />
			</StackPanel>
		</Grid>
	</Border>
</Window>

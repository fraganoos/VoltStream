<Page
    x:Class="VoltStream.WPF.Products.Views.ProductsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VoltStream.WPF.Products.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utils="clr-namespace:VoltStream.WPF.Commons.Utils"
    Title="ProductsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <!--  Grid struktura: 2 ta qator  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--  🔍 Filter panel  -->
        <Grid Grid.Row="0" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  🧩 Mahsulot turi  -->
            <StackPanel Grid.Column="0" Margin="10">
                <StackPanel Margin="5" Orientation="Horizontal">
                    <TextBlock
                        Width="100"
                        Margin="3,0,0,3"
                        VerticalAlignment="Center"
                        FontSize="13"
                        Foreground="{DynamicResource PrimaryTextColor}"
                        Text="Mahsulot turi" />
                    <ComboBox
                        x:Name="cbxCategory"
                        Width="200"
                        Margin="0,2"
                        Padding="4,2"
                        BorderBrush="#ccc"
                        BorderThickness="1"
                        DisplayMemberPath="Name"
                        FontSize="14"
                        IsEditable="True"
                        ItemsSource="{Binding Categories}"
                        SelectedItem="{Binding SelectedCategory}" />
                </StackPanel>

                <!--  🏷 Mahsulot nomi  -->
                <StackPanel Margin="5,0" Orientation="Horizontal">
                    <TextBlock
                        MinWidth="100"
                        Margin="3,0,0,3"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="{DynamicResource PrimaryTextColor}"
                        Text="Nomi" />
                    <ComboBox
                        x:Name="cbxProductName"
                        Width="200"
                        Margin="0,2"
                        Padding="4,2"
                        BorderBrush="#ccc"
                        BorderThickness="1"
                        DisplayMemberPath="Name"
                        FontSize="14"
                        IsEditable="True"
                        ItemsSource="{Binding Products}"
                        SelectedItem="{Binding SelectedProduct}" />
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" VerticalAlignment="Center">

                <!--  👁️‍🗨️ Ma'lumotlarni oldindan ko‘rish (Print Preview)  -->
                <Button
                    Margin="5"
                    Padding="10,3"
                    VerticalAlignment="Center"
                    Command="{Binding PreviewCommand}"
                    Content="📄 Ko‘rish"
                    FontSize="13"
                    ToolTip="Chop etishdan oldin ma'lumotlarni ko‘rish (Print Preview)" />

                <!--  🔄 Filterni tozalash  -->
                <Button
                    Margin="5,2,5,5"
                    Padding="10,3"
                    VerticalAlignment="Center"
                    Command="{Binding ClearFilterCommand}"
                    Content="🧹 Tozalash"
                    FontSize="13"
                    Style="{DynamicResource actionButton}"
                    ToolTip="Filterni tozalash yoki barcha ma'lumotlarni qayta ko‘rsatish" />
            </StackPanel>
            <StackPanel Grid.Column="2" VerticalAlignment="Center">

                <Button
                    Margin="5"
                    Padding="10,3"
                    VerticalAlignment="Center"
                    Command="{Binding PrintCommand}"
                    Content="🖨 Pechat"
                    FontSize="13"
                    ToolTip="Chiqarish (Printerga yuborish)" />

                <!--  📊 Excel  -->
                <Button
                    Margin="5,2,5,5"
                    Padding="10,3"
                    VerticalAlignment="Center"
                    Command="{Binding ExportToExcelCommand}"
                    Content="📊 Excel"
                    FontSize="13"
                    Style="{DynamicResource actionButton}"
                    ToolTip="Excel faylga eksport qilish" />
            </StackPanel>

            <!--  🖨 Pechat  -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center">

                <Button
                    Margin="5"
                    Padding="10,3"
                    VerticalAlignment="Center"
                    Command="{Binding PrintCommand}"
                    Content="🖨 Pechat"
                    FontSize="13"
                    Style="{DynamicResource actionButton}"
                    ToolTip="Chiqarish (Printerga yuborish)" />

                <!--  📊 Excel  -->
                <Button
                    Margin="5,2,5,5"
                    Padding="10,3"
                    VerticalAlignment="Center"
                    Command="{Binding ExportToExcelCommand}"
                    Content="📊 Excel"
                    FontSize="13"
                    ToolTip="Excel faylga eksport qilish" />
            </StackPanel>
            <!--  ✅ Checkbox: hamma qoldiqlarni ko‘rsatish  -->
            <CheckBox
                Grid.Column="4"
                Margin="10,25,0,15"
                VerticalAlignment="Bottom"
                Content="Hamma qoldiqlarni ko‘rsatish"
                FontSize="13"
                IsChecked="{Binding ShowAllBalances, Mode=TwoWay}" />
        </Grid>


        <!--  2-qatordagi DataGrid  -->
        <DataGrid
            Grid.Row="1"
            Margin="10"
            AlternatingRowBackground="#F5F5F5"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            FontSize="14"
            HeadersVisibility="Column, Row"
            utils:DataGridRowNumbering.IsEnabled="True"
            IsReadOnly="True"
            ItemsSource="{Binding FilteredProductItems}"
            SelectionMode="Single">

            <!--  Ustunlar  -->
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Category}"
                    Header="Mahsulot turi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding Name}"
                    Header="Nomi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding RollLength, StringFormat={}{0:N0}}"
                    Header="Rulon uzunligi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Quantity, StringFormat={}{0:N0}}"
                    Header="Rulon soni">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TotalCount, StringFormat={}{0:N0}}"
                    Header="Jami">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Unit}"
                    Header="O‘lchov birligi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Price, StringFormat={}{0:N2}}"
                    Header="Narxi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="1.5*"
                    Binding="{Binding TotalAmount, StringFormat={}{0:N2}}"
                    Header="Umumiy summa">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericTextBox.IsNumeric" Value="True" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

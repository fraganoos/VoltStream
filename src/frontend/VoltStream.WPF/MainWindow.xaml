<Window
    x:Class="VoltStream.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:VoltStream.WPF"
    Title="Volt Stream"
    Width="1300"
    Height="750"
    AllowsTransparency="True"
    Background="Transparent"
    Loaded="MainWindow_Loaded"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="8"
            GlassFrameThickness="0"
            ResizeBorderThickness="8" />
    </WindowChrome.WindowChrome>

    <Border
        x:Name="MainBorder"
        Background="#0A003A"
        BorderThickness="2"
        CornerRadius="8">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <LinearGradientBrush.RelativeTransform>
                    <RotateTransform x:Name="BorderRotateTransform" CenterX="0.5" CenterY="0.5" />
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0" />
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.5" />
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1" />
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            RepeatBehavior="Forever"
                            Storyboard.TargetName="BorderRotateTransform"
                            Storyboard.TargetProperty="Angle"
                            From="0"
                            To="360"
                            Duration="0:0:20" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SidebarColumn" Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid x:Name="Sidebar">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <StackPanel>
                    <ToggleButton
                        Width="250"
                        HorizontalContentAlignment="Left"
                        IsChecked="{Binding IsSidebarCollapsed}"
                        Style="{DynamicResource menuToggleButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="30"
                                Height="30"
                                Source="/Commons/Source/Images/LogoVolt.png" />
                            <TextBlock
                                x:Name="LogoText"
                                Margin="15,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Volt Stream" />
                        </StackPanel>
                    </ToggleButton>

                    <RadioButton
                        Command="{Binding ShowDashboardViewCommand}"
                        GroupName="MenuGroup"
                        Style="{DynamicResource menuButton}"
                        Tag="{DynamicResource color1}">
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}" />
                            <TextBlock Style="{StaticResource menuButtonText}" Text="Bosh sahifa" />
                        </StackPanel>
                    </RadioButton>

                    <RadioButton
                        Command="{Binding ShowSuppliesViewCommand}"
                        GroupName="MenuGroup"
                        Style="{DynamicResource menuButton}"
                        Tag="{DynamicResource color2}">
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <fa:IconImage Icon="ProjectDiagram" Style="{StaticResource menuButtonIcon}" />
                            <TextBlock Style="{StaticResource menuButtonText}" Text="Ishlab chiqarish" />
                        </StackPanel>
                    </RadioButton>

                    <RadioButton
                        Command="{Binding ShowSalesViewCommand}"
                        GroupName="MenuGroup"
                        Style="{DynamicResource menuButton}"
                        Tag="{DynamicResource color3}">
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <fa:IconImage Icon="ShoppingCart" Style="{StaticResource menuButtonIcon}" />
                            <TextBlock Style="{StaticResource menuButtonText}" Text="Savdo" />
                        </StackPanel>
                    </RadioButton>


                    <RadioButton
                        Command="{Binding ShowPaymentViewCommand}"
                        GroupName="MenuGroup"
                        Style="{DynamicResource menuButton}"
                        Tag="{DynamicResource color6}">
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <fa:IconImage Icon="MoneyBillWave" Style="{StaticResource menuButtonIcon}" />
                            <TextBlock Style="{StaticResource menuButtonText}" Text="Oldi-berdi" />
                        </StackPanel>
                    </RadioButton>

                    <RadioButton
                        Command="{Binding ShowProductViewCommand}"
                        GroupName="MenuGroup"
                        Style="{DynamicResource menuButton}"
                        Tag="{DynamicResource color8}">
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <fa:IconImage Icon="Boxes" Style="{StaticResource menuButtonIcon}" />
                            <TextBlock Style="{StaticResource menuButtonText}" Text="Mahsulotlar qoldig'i" />
                        </StackPanel>
                    </RadioButton>

                    <RadioButton
                        Command="{Binding ShowSalesHistoryViewCommand}"
                        GroupName="MenuGroup"
                        Style="{DynamicResource menuButton}"
                        Tag="{DynamicResource color7}">
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <fa:IconImage Icon="FileAlt" Style="{StaticResource menuButtonIcon}" />
                            <TextBlock Style="{StaticResource menuButtonText}" Text="Sotuv tarixi" />
                        </StackPanel>
                    </RadioButton>

                    <RadioButton
                        Command="{Binding ShowDebitorCreditorCommand}"
                        GroupName="MenuGroup"
                        Style="{DynamicResource menuButton}"
                        Tag="{DynamicResource color5}">
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <fa:IconImage Icon="BalanceScale" Style="{StaticResource menuButtonIcon}" />
                            <TextBlock Style="{StaticResource menuButtonText}" Text="Debitor va Kreditor" />
                        </StackPanel>
                    </RadioButton>

                    <RadioButton
                        Command="{Binding ShowTurnoversPageCommand}"
                        GroupName="MenuGroup"
                        Style="{DynamicResource menuButton}"
                        Tag="{DynamicResource color10}">
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <fa:IconImage Icon="ArrowsRotate" Style="{StaticResource menuButtonIcon}" />
                            <TextBlock Style="{StaticResource menuButtonText}" Text="Aylanma hisoboti" />
                        </StackPanel>
                    </RadioButton>

                    <RadioButton
                        Command="{Binding ShowSettingsCommand}"
                        GroupName="MenuGroup"
                        Style="{DynamicResource menuButton}"
                        Tag="{DynamicResource color9}">
                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                            <fa:IconImage Icon="Sliders" Style="{StaticResource menuButtonIcon}" />
                            <TextBlock Style="{StaticResource menuButtonText}" Text="Sozlamalar" />
                        </StackPanel>
                    </RadioButton>

                </StackPanel>

                <Grid
                    Grid.Row="1"
                    Margin="5,0"
                    Visibility="{Binding ApiConnection.ShowIndicator, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Ellipse
                        x:Name="ServerStatusIndicator"
                        Width="10"
                        Height="10"
                        Margin="20,0,5,0"
                        Fill="Gray" />

                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{Binding ApiConnection.StatusText}" />
                </Grid>

            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid
                    Grid.Row="0"
                    Background="Transparent"
                    MouseDown="Header_MouseDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Row="0" Grid.Column="0">
                        <TextBlock
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="White"
                            Text="{Binding CurrentPageTitle}"
                            Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </Border>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="5,10"
                                FontWeight="Bold"
                                Foreground="#E0E1F1"
                                Text="{Binding DateLabel}" />
                            <TextBlock
                                Margin="5,10"
                                Foreground="#E0E1F1"
                                Text="Bomdod:" />
                            <TextBlock
                                Margin="5,10"
                                FontWeight="Bold"
                                Foreground="#E0E1F1"
                                Text="{Binding Bomdod}" />
                            <TextBlock
                                Margin="5,10"
                                Foreground="#E0E1F1"
                                Text=" |    Peshin:" />
                            <TextBlock
                                Margin="5,10"
                                FontWeight="Bold"
                                Foreground="#E0E1F1"
                                Text="{Binding Peshin}" />
                            <TextBlock
                                Margin="5,10"
                                Foreground="#E0E1F1"
                                Text=" |    Asr:" />
                            <TextBlock
                                Margin="5,10"
                                FontWeight="Bold"
                                Foreground="#E0E1F1"
                                Text="{Binding Asr}" />
                            <TextBlock
                                Margin="5,10"
                                Foreground="#E0E1F1"
                                Text=" |    Shom:" />
                            <TextBlock
                                Margin="5,10"
                                FontWeight="Bold"
                                Foreground="#E0E1F1"
                                Text="{Binding Shom}" />
                            <TextBlock
                                Margin="5,10"
                                Foreground="#E0E1F1"
                                Text=" |    Xufton:" />
                            <TextBlock
                                Margin="5,10"
                                FontWeight="Bold"
                                Foreground="#E0E1F1"
                                Text="{Binding Xufton}" />
                        </StackPanel>
                    </Grid>

                    <StackPanel
                        Grid.Column="2"
                        Margin="0,0,15,0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Width="18"
                            Height="18"
                            Margin="0,0,10,0"
                            Click="BtnMinimize_Click"
                            Cursor="Hand"
                            Focusable="False">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#28AEED" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#278BEF" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="9" Background="{TemplateBinding Background}">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Foreground="White"
                                            Text="-" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button
                            Width="18"
                            Height="18"
                            Margin="0,0,10,0"
                            Click="BtnMaximize_Click"
                            Cursor="Hand"
                            Focusable="False">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#2ecc71" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#27ae60" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="9" Background="{TemplateBinding Background}">
                                        <fa:IconImage
                                            Width="10"
                                            Height="10"
                                            Foreground="White"
                                            Icon="WindowMaximize" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button
                            Width="18"
                            Height="18"
                            Click="BtnClose_Click"
                            Cursor="Hand"
                            Focusable="False">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#DA34AE" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#C62DAE" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="9" Background="{TemplateBinding Background}">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            Foreground="White"
                                            Text="X" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>

                <Border
                    Grid.Row="1"
                    Margin="0,0,8,8"
                    Background="#F8F9FA"
                    CornerRadius="0,0,12,0">
                    <Grid>
                        <StackPanel
                            x:Name="NotificationHost"
                            Margin="10"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Orientation="Vertical"
                            Panel.ZIndex="100" />

                        <Frame Content="{Binding CurrentChildView}" NavigationUIVisibility="Hidden" />
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>



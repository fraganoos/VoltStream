<Page
    x:Class="VoltStream.WPF.Debitors.Views.DebitorCreditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:VoltStream.WPF.Commons.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VoltStream.WPF.Debitors.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utils="clr-namespace:VoltStream.WPF.Commons.Utils"
    Title="Haqdorlik va qarzdorlik oynasi"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <!--  ðŸ” Filter panel  -->
        <Grid Grid.Row="0" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  ðŸ§¾ Filtr boâ€˜limi  -->
            <!--  ðŸ‘¤ Mijoz  -->
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="5,0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Text="Mijoz" />
                <!--  Foreground="{DynamicResource PrimaryTextColor}"  -->
                <ComboBox
                    x:Name="cbxCustomer"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0"
                    Padding="4,2"
                    VerticalAlignment="Center"
                    BorderBrush="#ccc"
                    BorderThickness="1"
                    DisplayMemberPath="Name"
                    FontSize="14"
                    IsEditable="True"
                    ItemsSource="{Binding AvailableCustomers}"
                    SelectedItem="{Binding SelectedCustomer}" />
                <!--  ðŸ“… Sana oraligâ€˜i  -->
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="05,0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Text="Summa" />
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ComboBox
                        x:Name="cbxSign"
                        Grid.Column="0"
                        Width="50"
                        Margin="0"
                        Padding="4,2"
                        VerticalAlignment="Center"
                        BorderBrush="#ccc"
                        BorderThickness="1"
                        FontSize="14"
                        Foreground="Black"
                        IsEditable="False"
                        ItemsSource="{Binding Signs}"
                        SelectedItem="{Binding Sign}" />
                    <TextBox
                        Grid.Column="1"
                        Width="120"
                        Margin="0"
                        Padding="4,2"
                        VerticalAlignment="Center"
                        BorderBrush="#ccc"
                        BorderThickness="1"
                        FontSize="14"
                        Text="{Binding Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <CheckBox
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Content="Barcha qoldiq "
                        FontSize="14" />
                </Grid>

            </Grid>
            <!--  ðŸ”˜ Tugmalar  -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button
                    Grid.Row="0"
                    Margin="5"
                    Padding="10,3"
                    VerticalAlignment="Center"
                    Command="{Binding PreviewCommand}"
                    Content="ðŸ“„ Koâ€˜rish"
                    FontSize="13"
                    ToolTip="Chop etishdan oldin ma'lumotlarni koâ€˜rish (Print Preview)" />
                <Button
                    Grid.Row="1"
                    Margin="5"
                    Padding="10,3"
                    VerticalAlignment="Center"
                    Command="{Binding ClearFilterCommand}"
                    Content="ðŸ§¹ Tozalash"
                    FontSize="13"
                    ToolTip="Filterni tozalash yoki barcha ma'lumotlarni qayta koâ€˜rsatish" />
            </Grid>
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button
                    Grid.Row="0"
                    Margin="5"
                    Padding="10,3"
                    VerticalAlignment="Center"
                    Command="{Binding PrintCommand}"
                    Content="ðŸ–¨ Pechat"
                    FontSize="13"
                    ToolTip="Chiqarish (Printerga yuborish)" />

                <Button
                    Grid.Row="1"
                    Margin="5"
                    Padding="10,3"
                    VerticalAlignment="Center"
                    Command="{Binding ExportToExcelCommand}"
                    Content="ðŸ“Š Excel"
                    FontSize="13"
                    ToolTip="Excel faylga eksport qilish" />

            </Grid>
        </Grid>
        <!--  ðŸ“‹ DataGrid  -->
        <DataGrid
            Grid.Row="1"
            Margin="10,5,10,-5"
            AlternatingRowBackground="#F5F5F5"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            FontSize="14"
            HeadersVisibility="Column, Row"
            utils:DataGridRowNumbering.IsEnabled="True"
            IsReadOnly="True"
            ItemsSource="{Binding FilteredDebitorCreditorItems}"
            SelectionMode="Single">

            <DataGrid.Columns>
                <!--  ðŸ•“ Sana  -->
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding Customer}"
                    Header="Mijoz">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>

                    <!--  ðŸ”¹ Header oâ€˜rtada joylashsin  -->
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Phone}"
                    Header="Phone">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>

                    <!--  ðŸ”¹ Header oâ€˜rtada joylashsin  -->
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding Address}"
                    Header="Address">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Left" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>

                    <!--  ðŸ”¹ Header oâ€˜rtada joylashsin  -->
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Discount, StringFormat={}{0:N2}}"
                    Header="Bonus">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericInput.IsNumeric" Value="True" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Debitor, StringFormat={}{0:N2}}"
                    Header="Debitor">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericInput.IsNumeric" Value="True" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Creditor, StringFormat={}{0:N2}}"
                    Header="Kreditor">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="Padding" Value="5,0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="utils:NumericInput.IsNumeric" Value="True" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <!--  Jami qatori  -->
        <Grid Grid.Row="2" Margin="10,5,10,5">
            <Grid.ColumnDefinitions>
                <!--  Bonus (Discount) jami  -->
                <ColumnDefinition Width="*" />
                <!--  Debitor jami  -->
                <ColumnDefinition Width="*" />
                <!--  Kreditor jami  -->
                <ColumnDefinition Width="*" />
                <!--  Umumiy balans  -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Bonus (Discount) jami  -->
            <Border
                Grid.Column="0"
                Padding="5"
                Background="#F9F9F9"
                BorderBrush="#DDD"
                BorderThickness="1,1,0,1">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Jami bonus:" />
                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#8B8000"
                        Text="{Binding FinalDiscount, StringFormat=N2}" />
                    <!--  Oltinrang  -->
                </StackPanel>
            </Border>

            <!--  Debitor jami  -->
            <Border
                Grid.Column="1"
                Padding="5"
                Background="#F9F9F9"
                BorderBrush="#DDD"
                BorderThickness="1,1,0,1">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Jami debitor:" />
                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#006400"
                        Text="{Binding FinalDebitor, StringFormat=N2}" />
                </StackPanel>
            </Border>

            <!--  Kreditor jami  -->
            <Border
                Grid.Column="2"
                Padding="5"
                Background="#F9F9F9"
                BorderBrush="#DDD"
                BorderThickness="1,1,0,1">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Jami kreditor:" />
                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#DC143C"
                        Text="{Binding FinalKreditor, StringFormat=N2}" />
                </StackPanel>
            </Border>

            <!--  Umumiy balans  -->
            <Border
                Grid.Column="3"
                Padding="5"
                Background="#E6F3FF"
                BorderBrush="#007ACC"
                BorderThickness="1">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#007ACC"
                        Text="Umumiy balans:" />
                    <TextBlock
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="{Binding FinalAmount, Converter={StaticResource BalanceToColorConverter}}"
                        Text="{Binding FinalAmount, StringFormat=N2}" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>

<Page
    x:Class="VoltStream.WPF.Sales_history.Views.SalesHistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:VoltStream.WPF.Commons.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utils="clr-namespace:VoltStream.WPF.Commons.Utils"
    Title="Sotuv tarixi"
    d:DesignHeight="450"
    d:DesignWidth="900"
    mc:Ignorable="d">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                VerticalAlignment="Center"
                FontSize="13"
                Text="Mijoz" />
            <ComboBox
                x:Name="cbxCustomer"
                Grid.Column="1"
                Width="200"
                Margin="10,0"
                DisplayMemberPath="Name"
                FontSize="14"
                IsEditable="True"
                ItemsSource="{Binding Customers}"
                SelectedItem="{Binding SelectedCustomer}" />

            <TextBlock
                Grid.Row="1"
                Margin="0,5,0,0"
                VerticalAlignment="Center"
                FontSize="13"
                Text="Xisobot davri" />
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Margin="10,5,10,0"
                Orientation="Horizontal">
                <controls:UserCalendar
                    x:Name="beginDate"
                    Width="110"
                    FontSize="14"
                    LostFocus="BeginDate_LostFocus"
                    SelectedDate="{Binding BeginDate, Mode=TwoWay}"
                    utils:EnterKeyTab.IsEnabled="True" />
                <TextBlock
                    Margin="5,0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Text="dan" />
                <controls:UserCalendar
                    x:Name="endDate"
                    Width="110"
                    FontSize="14"
                    LostFocus="EndDate_LostFocus"
                    SelectedDate="{Binding EndDate, Mode=TwoWay}"
                    utils:EnterKeyTab.IsEnabled="True" />
                <TextBlock
                    Margin="5,0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Text="gacha" />
            </StackPanel>

            <TextBlock
                Grid.Column="2"
                VerticalAlignment="Center"
                FontSize="13"
                Text="Mahsulot turi" />
            <ComboBox
                x:Name="cbxCategory"
                Grid.Column="3"
                Width="180"
                Margin="10,0"
                DisplayMemberPath="Name"
                FontSize="14"
                IsEditable="True"
                ItemsSource="{Binding Categories}"
                SelectedItem="{Binding SelectedCategory}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="2"
                Margin="0,5,0,0"
                VerticalAlignment="Center"
                FontSize="13"
                Text="Nomi" />
            <ComboBox
                x:Name="cbxProductName"
                Grid.Row="1"
                Grid.Column="3"
                Width="180"
                Margin="10,5,10,0"
                DisplayMemberPath="Name"
                FontSize="14"
                IsEditable="True"
                ItemsSource="{Binding Products}"
                SelectedItem="{Binding SelectedProduct}" />

            <Button
                Grid.Column="4"
                Width="100"
                Command="{Binding PreviewCommand}"
                Content="ðŸ“„ Koâ€˜rish"
                FontSize="13" />
            <Button
                Grid.Row="1"
                Grid.Column="4"
                Width="100"
                Margin="0,5,0,0"
                Command="{Binding ClearFilterCommand}"
                Content="ðŸ§¹ Tozalash"
                FontSize="13" />

            <Button
                Grid.Column="5"
                Width="100"
                Margin="10,0"
                Command="{Binding PrintCommand}"
                Content="ðŸ–¨ Pechat"
                FontSize="13" />
            <Button
                Grid.Row="1"
                Grid.Column="5"
                Width="100"
                Margin="10,5,10,0"
                Command="{Binding ExportToExcelCommand}"
                Content="ðŸ“Š Excel"
                FontSize="13" />
        </Grid>

        <DataGrid
            Grid.Row="1"
            AlternatingRowBackground="#F5F5F5"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            FontSize="14"
            HeadersVisibility="Column, Row"
            IsReadOnly="True"
            ItemsSource="{Binding FilteredSaleItemsView}"
            SelectionMode="Single"
            utils:DataGridRowNumbering.IsEnabled="True">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding OperationDate, StringFormat={}{0:dd.MM.yyyy}}"
                    Header="Sana">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="5,0" />
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="1.5*"
                    Binding="{Binding Customer}"
                    Header="Mijoz">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="5,0" />
                            <Setter Property="TextAlignment" Value="Left" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Category}"
                    Header="Mahsulot turi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="5,0" />
                            <Setter Property="TextAlignment" Value="Left" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="utils:NumericInput.IsNumeric" Value="True" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="1.7*"
                    Binding="{Binding Name}"
                    Header="Nomi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="5,0" />
                            <Setter Property="TextAlignment" Value="Left" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="utils:NumericInput.IsNumeric" Value="True" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding RollLength, StringFormat={}{0:N0}}"
                    Header="To'plamda">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="5,0" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="utils:NumericInput.IsNumeric" Value="True" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Quantity, StringFormat={}{0:N0}}"
                    Header="To'plam soni">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="5,0" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="utils:NumericInput.IsNumeric" Value="True" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TotalCount, StringFormat={}{0:N0}}"
                    Header="Jami">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="5,0" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="utils:NumericInput.IsNumeric" Value="True" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Unit}"
                    Header="Oâ€˜lchov birligi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="5,0" />
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="utils:NumericInput.IsNumeric" Value="True" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Price, StringFormat={}{0:N2}}"
                    Header="Narxi">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="5,0" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="utils:NumericInput.IsNumeric" Value="True" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="1.5*"
                    Binding="{Binding TotalAmount, StringFormat={}{0:N2}}"
                    Header="Umumiy summa">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="5,0" />
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="TextAlignment" Value="Right" />
                            <Setter Property="utils:NumericInput.IsNumeric" Value="True" />
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

